<UserControl
    x:Class="Obsidian.UWP.Controls.Chat.Messages.Bubbles.MediaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel>
        <Grid x:Name="GridMessageDisplay" x:FieldModifier="public" MaxHeight="250" MaxWidth="250" MinWidth="250" MinHeight="250" Height="250" Width="250">
            <TextBlock x:Name="TextBlockCipherImage" x:FieldModifier="public" TextWrapping="NoWrap"  Style="{StaticResource CipherTextBlockStyle}"></TextBlock>
            <Grid Margin="10,10,18,9">
                <Grid.Background>
                    <ImageBrush  x:Name="PlainImage" x:FieldModifier="public" Stretch="UniformToFill"></ImageBrush>
                </Grid.Background>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>



